{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TRF/JRF Extraction Schema",
  "description": "Canonical schema for Test Request Form / Job Request Form extraction",
  "type": "object",
  "properties": {
    "form_number": {
      "type": ["string", "null"],
      "description": "TRF/JRF form number or reference"
    },
    "date": {
      "type": ["string", "null"],
      "description": "Form date",
      "format": "date"
    },
    "customer": {
      "type": "object",
      "properties": {
        "name": {
          "type": ["string", "null"],
          "description": "Customer/Client name"
        },
        "address": {
          "type": ["string", "null"],
          "description": "Customer address"
        },
        "contact_person": {
          "type": ["string", "null"],
          "description": "Contact person name"
        },
        "email": {
          "type": ["string", "null"],
          "description": "Customer email"
        },
        "phone": {
          "type": ["string", "null"],
          "description": "Customer phone number"
        }
      },
      "required": []
    },
    "samples": {
      "type": "array",
      "description": "List of samples",
      "items": {
        "type": "object",
        "properties": {
          "sample_number": {
            "type": ["string", "null"],
            "description": "Sample identification number"
          },
          "description": {
            "type": ["string", "null"],
            "description": "Sample description"
          },
          "quantity": {
            "type": ["string", "null"],
            "description": "Sample quantity"
          },
          "condition": {
            "type": ["string", "null"],
            "description": "Sample condition"
          },
          "received_date": {
            "type": ["string", "null"],
            "description": "Date sample was received",
            "format": "date"
          }
        },
        "required": []
      }
    },
    "tests": {
      "type": "array",
      "description": "List of tests requested",
      "items": {
        "type": "object",
        "properties": {
          "test_name": {
            "type": ["string", "null"],
            "description": "Name of the test"
          },
          "standard": {
            "type": ["string", "null"],
            "description": "Test standard or specification"
          },
          "method": {
            "type": ["string", "null"],
            "description": "Test method"
          },
          "sample_number": {
            "type": ["string", "null"],
            "description": "Associated sample number"
          },
          "remarks": {
            "type": ["string", "null"],
            "description": "Test remarks or notes"
          }
        },
        "required": []
      }
    },
    "project_information": {
      "type": "object",
      "properties": {
        "project_code": {
          "type": ["string", "null"],
          "description": "Project code or reference"
        },
        "project_name": {
          "type": ["string", "null"],
          "description": "Project name"
        },
        "priority": {
          "type": ["string", "null"],
          "description": "Project priority"
        },
        "expected_completion_date": {
          "type": ["string", "null"],
          "description": "Expected completion date",
          "format": "date"
        }
      },
      "required": []
    },
    "remarks": {
      "type": ["string", "null"],
      "description": "General remarks or notes"
    }
  },
  "required": []
}





