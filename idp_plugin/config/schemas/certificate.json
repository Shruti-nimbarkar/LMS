{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Certificate Extraction Schema",
  "description": "Canonical schema for Test Certificate extraction",
  "type": "object",
  "properties": {
    "certificate_number": {
      "type": ["string", "null"],
      "description": "Certificate reference number"
    },
    "issue_date": {
      "type": ["string", "null"],
      "description": "Certificate issue date",
      "format": "date"
    },
    "validity_date": {
      "type": ["string", "null"],
      "description": "Certificate validity/expiry date",
      "format": "date"
    },
    "customer": {
      "type": "object",
      "properties": {
        "name": {
          "type": ["string", "null"],
          "description": "Customer/Client name"
        },
        "address": {
          "type": ["string", "null"],
          "description": "Customer address"
        }
      },
      "required": []
    },
    "product": {
      "type": "object",
      "properties": {
        "name": {
          "type": ["string", "null"],
          "description": "Product name"
        },
        "description": {
          "type": ["string", "null"],
          "description": "Product description"
        },
        "model": {
          "type": ["string", "null"],
          "description": "Product model number"
        },
        "batch_number": {
          "type": ["string", "null"],
          "description": "Batch or lot number"
        },
        "manufacturing_date": {
          "type": ["string", "null"],
          "description": "Manufacturing date",
          "format": "date"
        }
      },
      "required": []
    },
    "samples": {
      "type": "array",
      "description": "List of samples tested",
      "items": {
        "type": "object",
        "properties": {
          "sample_number": {
            "type": ["string", "null"],
            "description": "Sample identification number"
          },
          "description": {
            "type": ["string", "null"],
            "description": "Sample description"
          },
          "received_date": {
            "type": ["string", "null"],
            "description": "Date sample was received",
            "format": "date"
          },
          "tested_date": {
            "type": ["string", "null"],
            "description": "Date sample was tested",
            "format": "date"
          }
        },
        "required": []
      }
    },
    "test_results": {
      "type": "array",
      "description": "List of test results",
      "items": {
        "type": "object",
        "properties": {
          "test_name": {
            "type": ["string", "null"],
            "description": "Name of the test"
          },
          "standard": {
            "type": ["string", "null"],
            "description": "Test standard or specification"
          },
          "method": {
            "type": ["string", "null"],
            "description": "Test method"
          },
          "result": {
            "type": ["string", "null"],
            "description": "Test result"
          },
          "unit": {
            "type": ["string", "null"],
            "description": "Result unit of measurement"
          },
          "specification": {
            "type": ["string", "null"],
            "description": "Specification or limit"
          },
          "status": {
            "type": ["string", "null"],
            "description": "Pass/Fail status"
          },
          "sample_number": {
            "type": ["string", "null"],
            "description": "Associated sample number"
          }
        },
        "required": []
      }
    },
    "laboratory": {
      "type": "object",
      "properties": {
        "name": {
          "type": ["string", "null"],
          "description": "Laboratory name"
        },
        "accreditation": {
          "type": ["string", "null"],
          "description": "Laboratory accreditation number"
        },
        "address": {
          "type": ["string", "null"],
          "description": "Laboratory address"
        }
      },
      "required": []
    },
    "signatories": {
      "type": "array",
      "description": "List of signatories",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": ["string", "null"],
            "description": "Signatory name"
          },
          "designation": {
            "type": ["string", "null"],
            "description": "Signatory designation"
          },
          "signature_date": {
            "type": ["string", "null"],
            "description": "Signature date",
            "format": "date"
          }
        },
        "required": []
      }
    },
    "remarks": {
      "type": ["string", "null"],
      "description": "General remarks or notes"
    }
  },
  "required": []
}





