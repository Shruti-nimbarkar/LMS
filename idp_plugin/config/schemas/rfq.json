{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RFQ Extraction Schema",
  "description": "Canonical schema for Request for Quotation extraction",
  "type": "object",
  "properties": {
    "rfq_number": {
      "type": ["string", "null"],
      "description": "RFQ reference number"
    },
    "date": {
      "type": ["string", "null"],
      "description": "RFQ date",
      "format": "date"
    },
    "customer": {
      "type": "object",
      "properties": {
        "name": {
          "type": ["string", "null"],
          "description": "Customer/Client name"
        },
        "address": {
          "type": ["string", "null"],
          "description": "Customer address"
        },
        "contact_person": {
          "type": ["string", "null"],
          "description": "Contact person name"
        },
        "email": {
          "type": ["string", "null"],
          "description": "Customer email"
        },
        "phone": {
          "type": ["string", "null"],
          "description": "Customer phone number"
        }
      },
      "required": []
    },
    "products": {
      "type": "array",
      "description": "List of products/services requested",
      "items": {
        "type": "object",
        "properties": {
          "product_name": {
            "type": ["string", "null"],
            "description": "Product or service name"
          },
          "description": {
            "type": ["string", "null"],
            "description": "Product description"
          },
          "quantity": {
            "type": ["string", "null"],
            "description": "Quantity requested"
          },
          "specifications": {
            "type": ["string", "null"],
            "description": "Product specifications"
          }
        },
        "required": []
      }
    },
    "testing_requirements": {
      "type": "array",
      "description": "List of testing requirements",
      "items": {
        "type": "object",
        "properties": {
          "test_name": {
            "type": ["string", "null"],
            "description": "Name of the test"
          },
          "standard": {
            "type": ["string", "null"],
            "description": "Test standard or specification"
          },
          "method": {
            "type": ["string", "null"],
            "description": "Test method"
          },
          "quantity": {
            "type": ["string", "null"],
            "description": "Number of tests"
          }
        },
        "required": []
      }
    },
    "delivery_requirements": {
      "type": "object",
      "properties": {
        "delivery_date": {
          "type": ["string", "null"],
          "description": "Required delivery date",
          "format": "date"
        },
        "delivery_location": {
          "type": ["string", "null"],
          "description": "Delivery location"
        },
        "special_instructions": {
          "type": ["string", "null"],
          "description": "Special delivery instructions"
        }
      },
      "required": []
    },
    "commercial_terms": {
      "type": "object",
      "properties": {
        "currency": {
          "type": ["string", "null"],
          "description": "Currency"
        },
        "payment_terms": {
          "type": ["string", "null"],
          "description": "Payment terms"
        },
        "validity_period": {
          "type": ["string", "null"],
          "description": "Quotation validity period"
        }
      },
      "required": []
    },
    "remarks": {
      "type": ["string", "null"],
      "description": "General remarks or notes"
    }
  },
  "required": []
}





