{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Calibration Report Extraction Schema",
  "description": "Canonical schema for Calibration Report extraction",
  "type": "object",
  "properties": {
    "report_number": {
      "type": ["string", "null"],
      "description": "Calibration report reference number"
    },
    "date": {
      "type": ["string", "null"],
      "description": "Report date",
      "format": "date"
    },
    "calibration_date": {
      "type": ["string", "null"],
      "description": "Date of calibration",
      "format": "date"
    },
    "next_calibration_date": {
      "type": ["string", "null"],
      "description": "Next calibration due date",
      "format": "date"
    },
    "customer": {
      "type": "object",
      "properties": {
        "name": {
          "type": ["string", "null"],
          "description": "Customer/Client name"
        },
        "address": {
          "type": ["string", "null"],
          "description": "Customer address"
        },
        "contact_person": {
          "type": ["string", "null"],
          "description": "Contact person name"
        }
      },
      "required": []
    },
    "equipment": {
      "type": "object",
      "properties": {
        "name": {
          "type": ["string", "null"],
          "description": "Equipment name"
        },
        "manufacturer": {
          "type": ["string", "null"],
          "description": "Equipment manufacturer"
        },
        "model": {
          "type": ["string", "null"],
          "description": "Equipment model number"
        },
        "serial_number": {
          "type": ["string", "null"],
          "description": "Equipment serial number"
        },
        "asset_number": {
          "type": ["string", "null"],
          "description": "Asset or inventory number"
        }
      },
      "required": []
    },
    "calibration_standards": {
      "type": "array",
      "description": "List of calibration standards used",
      "items": {
        "type": "object",
        "properties": {
          "standard_name": {
            "type": ["string", "null"],
            "description": "Standard name or reference"
          },
          "certificate_number": {
            "type": ["string", "null"],
            "description": "Standard certificate number"
          },
          "validity_date": {
            "type": ["string", "null"],
            "description": "Standard validity date",
            "format": "date"
          }
        },
        "required": []
      }
    },
    "calibration_results": {
      "type": "array",
      "description": "List of calibration measurement results",
      "items": {
        "type": "object",
        "properties": {
          "parameter": {
            "type": ["string", "null"],
            "description": "Calibration parameter"
          },
          "nominal_value": {
            "type": ["string", "null"],
            "description": "Nominal or reference value"
          },
          "measured_value": {
            "type": ["string", "null"],
            "description": "Measured value"
          },
          "uncertainty": {
            "type": ["string", "null"],
            "description": "Measurement uncertainty"
          },
          "unit": {
            "type": ["string", "null"],
            "description": "Unit of measurement"
          },
          "status": {
            "type": ["string", "null"],
            "description": "Pass/Fail status"
          },
          "specification": {
            "type": ["string", "null"],
            "description": "Specification or tolerance"
          }
        },
        "required": []
      }
    },
    "environmental_conditions": {
      "type": "object",
      "properties": {
        "temperature": {
          "type": ["string", "null"],
          "description": "Temperature during calibration"
        },
        "humidity": {
          "type": ["string", "null"],
          "description": "Humidity during calibration"
        },
        "pressure": {
          "type": ["string", "null"],
          "description": "Pressure during calibration"
        }
      },
      "required": []
    },
    "laboratory": {
      "type": "object",
      "properties": {
        "name": {
          "type": ["string", "null"],
          "description": "Laboratory name"
        },
        "accreditation": {
          "type": ["string", "null"],
          "description": "Laboratory accreditation number"
        },
        "address": {
          "type": ["string", "null"],
          "description": "Laboratory address"
        }
      },
      "required": []
    },
    "calibrated_by": {
      "type": ["string", "null"],
      "description": "Name of person who performed calibration"
    },
    "approved_by": {
      "type": ["string", "null"],
      "description": "Name of person who approved the report"
    },
    "remarks": {
      "type": ["string", "null"],
      "description": "General remarks or notes"
    }
  },
  "required": []
}





